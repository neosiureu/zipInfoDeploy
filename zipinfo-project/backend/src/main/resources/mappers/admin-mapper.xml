<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zipinfo.project.admin.model.mapper.AdminMapper">
  <!-- 탈퇴한 회원 목록 조회 -->
  <select id="selectWithdrawnMemberList" resultType="com.zipinfo.project.member.model.dto.Member">
    SELECT * FROM MEMBER
    WHERE MEMBER_DEL_FL = 'Y'
    ORDER BY MEMBER_NO DESC
  </select>

  <!-- 탈퇴 회원 복구 -->
  <update id="restoreWithdrawnMember">
    UPDATE MEMBER
    SET MEMBER_DEL_FL = 'N'
    WHERE MEMBER_NO = #{memberNo}
  </update>
</mapper>

